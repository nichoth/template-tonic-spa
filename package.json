{
  "name": "template-tonic-spa",
  "description": "A template for tonic apps",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "//start": "vite",
    "start": "npm run restart && npm run copy && npm run serve",
    "serve": "live-server --port=8888 ./public",
    "lint": "standardx -v",
    "build": "npm run restart && npm run copy",
    "copy": "cp ./src/* node_modules/@socketsupply/tonic/dist/tonic.min.js ./public",
    "restart": "mkdir -p ./public && rm -rf ./public/*",
    "preversion": "check-deps . 1 && npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build",
    "test": "node ./test/test.js | tap-arc"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.cjs"
    }
  },
  "dependencies": {
    "@socketsupply/tonic": "^15.1.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@nichoth/check-max-deps": "0.0.2",
    "esbuild": "^0.15.11",
    "live-server": "^1.2.2",
    "postcss-nesting": "^11.2.2",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tapzero": "^0.6.1"
  },
  "standardx": {
    "ignore": [
      "dist/*"
    ]
  },
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "template",
    "tonic"
  ],
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later"
}
