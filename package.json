{
  "name": "template-tonic-spa",
  "description": "A template for tonic apps",
  "version": "0.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "vite",
    "copy": "cp node_modules/@socketsupply/tonic/dist/tonic.min.js src/robots.txt ./public",
    "build-js": "esbuild src/index.js --bundle --format=esm --external:@socketsupply/tonic --outdir=public --keep-names",
    "lint": "standardx -v",
    "build": "mkdir -p public && rm -rf ./public/* && npm run copy && vite build",
    "build-css": "postcss src/style/style.css --output public/style.css",
    "watch-css": "postcss src/style/style.css --output public/style.css --watch",
    "preversion": "check-deps . 5 && npm run lint",
    "postversion": "git push && git push --tags",
    "test": "esbuild --bundle --platform=browser --format=esm test/test.js | tap-ssc --html=test/index.html | tap-arc"
  },
  "dependencies": {
    "@nichoth/routes": "^3.0.6",
    "@socketsupply/tonic": "^15.1.1",
    "route-event": "^4.1.7"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@nichoth/check-max-deps": "0.0.2",
    "@nichoth/tap-ssc": "^0.4.0",
    "concurrently": "^8.0.1",
    "esbuild": "^0.15.11",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-nesting": "^11.2.2",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tapzero": "^0.6.1",
    "terser": "^5.17.6",
    "vite": "^4.3.9"
  },
  "standardx": {
    "ignore": [
      "public/*"
    ]
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "template",
    "tonic"
  ],
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later"
}
