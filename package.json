{
  "name": "template-tonic-spa",
  "description": "A template for tonic apps",
  "version": "0.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run copy && npm run serve",
    "copy": "cp node_modules/@socketsupply/tonic/dist/tonic.min.js ./src",
    "serve": "live-server --entry-file=src/index.html --port=8888 --watch=src ./src",
    "lint": "standardx -v",
    "build": "mkdir -p public && rm -rf ./public/* && npm run copy:prod",
    "build-css": "postcss src/_style.css --output src/style.css",
    "watch-css": "postcss src/_style.css --output src/style.css --watch",
    "copy:prod": "npm run copy && cp ./src/* ./public",
    "preversion": "check-deps . 1 && npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "test": "node ./test/test.js | tap-arc"
  },
  "dependencies": {
    "@socketsupply/tonic": "^15.1.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@nichoth/check-max-deps": "0.0.2",
    "esbuild": "^0.15.11",
    "live-server": "^1.1.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-nesting": "^11.2.2",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tapzero": "^0.6.1"
  },
  "standardx": {
    "ignore": [
      "public/*"
    ]
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "template",
    "tonic"
  ],
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later"
}
